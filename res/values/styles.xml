<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="Header">
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#222222</item>
    </style>
    
    <style name="Header.H2" parent="@style/Header">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#111111</item>
        <item name="android:shadowColor">#ffffff</item>
    </style>

    <style name="Header.H2.Yellow" parent="@style/Header.H2">
        <item name="android:textColor">#e9c500</item>
    </style>

    <style name="Header.H2.Red" parent="@style/Header.H2">
        <item name="android:textColor">#a3150e</item>
    </style>

    <style name="Header.H2.Blue" parent="@style/Header.H2">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Header.H2.Inverse" parent="@style/Header.H2">
        <item name="android:textColor">#ffffff</item>
        <item name="android:shadowColor">#111111</item>
    </style>
    
        <style name="Header.H3" parent="@style/Header">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">#111111</item>
        <item name="android:shadowColor">#ffffff</item>
    </style>

    <style name="Header.H3.Blue" parent="@style/Header.H3">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Header.H3.Inverse" parent="@style/Header.H3">
        <item name="android:textColor">#ffffff</item>
        <item name="android:shadowColor">#111111</item>
    </style>

    <style name="Header.H4" parent="@style/Header">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#111111</item>
        <item name="android:shadowColor">#ffffff</item>
    </style>

    <style name="Header.H4.Inverse" parent="@style/Header.H4">
        <item name="android:textColor">#ffffff</item>
        <item name="android:shadowColor">#111111</item>
    </style>
    
     <style name="EditTextField" parent="@style/Text">
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textColorHint">#bbbbbb</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">@dimen/padding_large</item>
        <item name="android:paddingTop">@dimen/padding_xsmall</item>
        <item name="android:paddingBottom">@dimen/padding_xsmall</item>
        <item name="android:paddingLeft">@dimen/padding_xsmall</item>
        <item name="android:paddingRight">@dimen/padding_xsmall</item>
        <item name="android:background">@drawable/background_et</item>
    </style>

     <style name="Button.Blue" parent="@style/Button.Inverse">
        <item name="android:background">@drawable/button_blue</item>
    </style>
    
     <style name="Button.Green" parent="@style/Button.Inverse">
        <item name="android:background">@drawable/button_green</item>
    </style>
    
    <style name="Button.Black" parent="@style/Button.Inverse">
        <item name="android:background">@drawable/button_black</item>
    </style>

    <style name="Button.Red" parent="@style/Button.Inverse">
        <item name="android:background">@drawable/button_red</item>
    </style>
    
    <style name="Button.Default" parent="@style/Button">
        <item name="android:background">@drawable/button_default</item>
    </style>
    
     <style name="Button.Inverse" parent="@style/Button">
        <item name="android:textColor">#ffffff</item>
        <item name="android:shadowColor">#111111</item>
    </style>
    
     <style name="Button" parent="@style/Text.Label">
        <item name="android:paddingTop">@dimen/padding_normal</item>
        <item name="android:paddingBottom">@dimen/padding_normal</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:shadowDx">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>
   

    <style name="Text.Label" parent="@style/Text">
        <item name="android:textColor">#333333</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <style name="Text">
        <item name="android:textSize">17sp</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textColor">#222222</item>
        <item name="android:shadowColor">#ffffff</item>
    </style>


    <style name="Text.Label.Form" parent="@style/Text.Label">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Url" parent="@style/Text.Label">
        <item name="android:textColor">#2fade1</item>
    </style>

    <style name="Text.Label.light" parent="@style/Text">
        <item name="android:textColor">#666666</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text.Label.Mini" parent="@style/Text.Label.light">
        <item name="android:textSize">9sp</item>
    </style>

    <style name="Text.Label.Small" parent="@style/Text.Label.light">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Text.Label.Small.Bold" parent="@style/Text.Label">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Label.Mini.Blue" parent="@style/Text.Label.Mini">
        <item name="android:textColor">#0c5686</item>
    </style>

    <style name="Text.Label.Red" parent="@style/Text.Label">
        <item name="android:textColor">#d02d3c</item>
    </style>

    <style name="Text.Label.Mini.LightGray" parent="@style/Text.Label.Mini">
        <item name="android:textColor">#cccccc</item>
    </style>

    <style name="Text.Label.Bold" parent="@style/Text">
        <item name="android:textColor">#333333</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Label.Inverse" parent="@style/Text">
        <item name="android:textColor">#ffffff</item>
        <item name="android:shadowColor">#111111</item>
    </style>

    <style name="Text.Label.Inverse.Mini" parent="@style/Text.Label.Inverse">
        <item name="android:textSize">9sp</item>
    </style>

    <style name="Text.Label.Footer" parent="@style/Text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:shadowColor">@color/white</item>
    </style>
    
</resources>
